<%= button_to "New product", new_product_path, :method => :get, :class => "btn btn-default" %></p>
<table class="table table-hover">
<tr>
	<th>Name</th>
	<th>Edit</th>
	<th>Delete</th>
</tr>
<% @products.each do |p| %>
	<tr>
		<td><%= link_to "#{p.name}", product_path(p) %></td>
		<td><%= link_to 'Edit', edit_product_path(p) %></td>
		<td><%= link_to 'Destroy', product_path(p), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>