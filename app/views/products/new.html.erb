<%= form_for @product do |f| %>
	<% if @product.errors.any? %>
		<% @product.errors.full_messages.each do |m| %>
			<%= m %>
		<% end %>
	<% end %>
	<div class="form-group">
		<p><%= f.label :Name %></p>
		<p><%= f.text_field 'name', :class => 'form-control' %></p>
	</div>
	<div class="form-group">
		<p><%= f.label :Description %></p>
		<p><%= f.text_area 'description', :class => 'form-control', :rows => '6'%></p>
	</div>
	<div class="form-group">
		<p><%= f.label :Image %></p>
		<p><%= f.file_field :image %></p>	
	</div>
	<div class="action">
		<p><%= f.submit 'Add', :class => 'btn btn-primary' %></p>
	</div>
<% end %>